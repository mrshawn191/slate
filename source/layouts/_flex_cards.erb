<%# 
    Render the passed in set of cards with css flexbox 
    styling so that they fill the containing column in 
    pairs.
%> 
<div class="flex-row row">
    <% cards.each do |card| %>
    <div class="col-md-6 col-sm-6">
        <a href="<%= card.link %>">
        <div class="card">
            <div class="icon-bg bg-<%= get_random_icon_color %>">
                <%= svg card.icon %>
            </div>
            <span><%= card.tag.upcase if card.tag %></span>
            <h3><%= card.title %></h3>
            <p><%= card.description %></p>
        </div>
        </a>
    </div>
    <% end %>
</div>